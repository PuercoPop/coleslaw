{namespace coleslaw.theme.limajs}

{template index}
<h1 class="title">{$index.title}</h1>

{foreach $obj in $index.content}
  <div class="article-meta">
    <a class="article-title" href="{$config.domain}/posts/{$obj.slug}.{$config.pageExt}">{$obj.title}</a>
    <div class="date"> posted on {$obj.date}</div>
    <div class="article">{$obj.text |noAutoescape}</div>
  </div>
{/foreach}


// Cuando nos Juntamos

{foreach $event in $index.events}
  {if isFirst($event)}
    <div class="event">
      {$event.text |noAutoescape}
    </div>
  {/if}
  {if isLast($event)}
    <p>Puedes ver los eventos pasados <a href="{$config.domain}/eventos/">aqu√≠</a></p>
  {/if}
{/foreach}
  

